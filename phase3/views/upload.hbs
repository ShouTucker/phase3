<html>
    <head>
        <title>MemePanda</title>
        <link rel="stylesheet" href="/css/bootstrap.css" />
    </head>
     
    <body>
        
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="/users/home">MEME PANDA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/profile">Account</a>
                    </li> 
                    <li class="nav-item active"> 
                        <a class="nav-link" href="/users/logout">Logout</a>  
                    </li>
                </ul> 
                <form class="form-inline mt-2 mt-md-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
        
        <br> <br>
        
        <div class="container">
            <div class="row">
                <div class="col-md-6 m-auto">
                    <h1 class="text-center display-4 my-4">File Upload</h1>
                    <form action="/upload" method="POST" enctype="multipart/form-data">
                        <div class="custom-file mb-3">
                            <input type="file" name="file" id="file" class="custom-file-input">
                            <input type="hidden" name="image" value="{{uploads.filename}}">
                            <input type="hidden" name="user" value="{{user._id}}">
                            <label for="file" class="custom-file-label">Choose File</label>
                        </div>
                            
                            
                        <input type = "text" name = "title" placeholder="Title" class="form-control">
                        <input type = "text" name = "tag" placeholder="Tags" class="form-control">
                        <select class="custom-select d-block w-100" name="Privacy" required>
                            <option value="False">Public</option>
                            <option value="True">Private</option>    
                        </select>
                        <br>
                                
                        <input type="submit" value="Submit" class="btn btn-primary btn-block">
                    </form>
                </div>
            </div>
        </div>
        
        <script src="/js/bootstrap.js"></script>
  </body>
</html>